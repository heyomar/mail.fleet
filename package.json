{
  "name": "mailfleet",
  "version": "1.0.0",
  "description": "rapid modular email",
  "scripts": {
    "serve": "browser-sync start --server dist --files '**/*'",
    "templates:compile": "metalsmith",
    "watch:templates": "nodemon --ext hbs --ignore node_modules/ --ignore /dist --exec 'npm run templates:compile'",
    "watch": "parallelshell 'npm run watch:templates' 'npm run serve'",
    "start": "npm run watch"
  },
  "author": "Omar Rasool",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "latest",
    "handlebars": "^4.0.5",
    "metalsmith": "^2.1.0",
    "metalsmith-in-place": "^1.4.4",
    "parallelshell": "^2.0.0",
    "nodemon": "^1.9.2"
  }
}
